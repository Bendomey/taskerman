# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Date

type User {
  id: Int!
  fullname: String!
  email: String!
  user_type: UserTypeEnum!
  createdBy: User!
  createdAt: Date!
  updatedAt: Date!
}

enum UserTypeEnum {
  ADMIN
  USER
  REVIEWER
}

input CreateUserInput {
  name: String!
  email: String!
  password: String!
}

type Query {
  users: [User]!
}

type Mutation {
  createUser(input: CreateUserInput!): User!
}
